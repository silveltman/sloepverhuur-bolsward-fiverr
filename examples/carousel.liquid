title: Carousel

carousel:
  - image: https://picsum.photos/400/200?random=1
    alt: My image description
  - image: https://picsum.photos/400/200?random=2
    alt: My image description
  - image: https://picsum.photos/400/200?random=3
    alt: My image description
  - image: https://picsum.photos/400/200?random=4
    alt: My image description
  - image: https://picsum.photos/400/200?random=5
    alt: My image description
  - image: https://picsum.photos/400/200?random=6
    alt: My image description
---

<div class="carousel"
  x-data="{
    skip: 1,
    next() {
      this.to((current, offset) => current + (offset * this.skip))
    },
    prev() {
      this.to((current, offset) => current - (offset * this.skip))
    },
    to(strategy) {
      let slider = this.$refs.slider
      let current = slider.scrollLeft
      let offset = slider.firstElementChild.getBoundingClientRect().width
      
      this.$refs.slider.scrollTo({ left: strategy(current, offset), behavior: 'smooth' })
    },
    focusableWhenVisible: {
      'x-intersect:enter'() {
        this.$el.removeAttribute('tabindex')
      },
      'x-intersect:leave'() {
        this.$el.setAttribute('tabindex', '-1')
      },
    }
  }"
  @keydown.left="prev"
  @keydown.right="next"
>
  <button @click="prev" class="carousel__btn carousel__btn--prev "> ❮ </button>

  <ul x-ref="slider" class="carousel__list" tabindex="0">
    {% for item in carousel %}
      <li class="carousel__item">
        <!-- Replace with custom content from here... -->
          <img src="{{ item.image }}" alt="{{ item.alt }}">
          <button x-bind="focusableWhenVisible" class="btn">Button</button>
        <!-- till here -->
      </li>
    {% endfor %}
  </ul>

  <button @click="next" class="carousel__btn carousel__btn--next"> ❯ </button>
</div>