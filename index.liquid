<main>
  <section class="index-hero">
    <img src="https://picsum.photos/1200/800?random=1" alt="" class="index-hero__img">
    <div class="index-hero__content">
      <h1 class="index-hero__h editable">Ontdek waterrijk Friesland</h1>
      <p class="index-hero__p editable">Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
      <a href="#sloepen" class="index-hero__btn btn btn--primary btn--big editable">Bekijk de sloepen</a>
    </div>
  </section>
  
  <section class="index-sloepen" id="sloepen">

    {% assign sloepen_count = collections.sloepen.size | minus: 1  %}
    {% for i in (0..sloepen_count) %}
      {% assign item = collections.sloepen[i]  %}
      {% bookshop "card/big" bind: item.data buttons: _card_buttons afbeelding: item.data.gallery[0] %}
    {% endfor %}

  </section>
  
  <section class="index-routes">
    <div class="index-routes__wrapper">
      <div class="index-routes__map">
        {% bookshop "map" url: "https://www.google.com/maps/d/embed?mid=1-Gr8CUtQnISVsPaFX1spJl6q9tp5gW8y&usp=sharing" %}
