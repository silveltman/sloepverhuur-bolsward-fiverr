        <a href="/aanbod/routes" class="index-routes__btn btn btn--primary editable">Bekijk routes</a>
      </div>
    </div>

  </section>

  <section class="index-arrangementen">

    {%- comment -%}
    {% assign arrangementen_count = collections.arrangementen.size | minus: 1  %}
    {% for i in (0..arrangementen_count) %}
      {% assign item = collections.arrangementen[i]  %}
      {% bookshop "card/small" bind: item.data  %}
    {% endfor %}
    {%- endcomment -%}

  </section>

  <section class="index-reviews" x-data="{ active: 2 }">
    <div class="index-reviews__wrapper">
      <div class="index-reviews__content">
        <h2 class="index-reviews__h editable">Lorem ipsum</h2>
